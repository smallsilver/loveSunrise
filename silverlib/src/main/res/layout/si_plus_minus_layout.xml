<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="25dp"
    >

  <ImageView
      android:id="@+id/btn_subtract"
      android:layout_width="25dp"
      android:layout_height="match_parent"
      android:clickable="true"
      android:padding="7dp"
      android:background="@drawable/btn_selecter_left"
      android:gravity="center"
      android:src="@drawable/btn_minus_selecter_bg"
      />

  <TextView
      android:id="@+id/si_pm_number"
      android:layout_width="35dp"
      android:layout_height="match_parent"
      android:background="@drawable/rounded_rectangle_middle_bg"
      android:gravity="center"
      android:text="0"
      android:textSize="16sp"
      android:textColor="#333333"
      android:layout_toRightOf="@+id/btn_subtract"
      />

  <ImageView
      android:id="@+id/btn_add"
      android:layout_width="25dp"
      android:layout_height="match_parent"
      android:clickable="true"
      android:padding="7dp"
      android:background="@drawable/btn_selecter_right"
      android:src="@drawable/btn_plus_selecter_bg"
      android:textColor="@android:color/white"
      android:layout_toRightOf="@+id/si_pm_number"
      />
</RelativeLayout>
